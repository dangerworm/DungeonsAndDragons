@model DungeonsAndDragons_Data.Models.Object.Game[]

<div class="row">
    <div class="col-md-12">
        <table class="table table-hover table-striped">
            <thead>
            <tr>
                <th>Name</th>
                <th>Number of Players</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var game in Model)
            {
                <tr>
                    <td><a href="@Url.Action("Index", "Game", new { id = game.Id })">@game.Name</a></td>
                    <td>@game.Players.Count</td>
                </tr>
            }
            </tbody>
        </table>
    </div>

</div>
