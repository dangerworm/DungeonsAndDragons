@model IReadOnlyCollection<DungeonsAndDragons_Data.Models.Object.PlayerCharacter>

<div class="row">
    <div class="col-md-12">
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Height</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var player in Model)
                {
                    <tr>
                        <td><a href="@Url.Action("Index", "Players", new { id = player.Id })">@player.Name</a></td>
                        <td>@player.Age</td>
                        <td>@player.Height</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <p>
        <a href="#" class="btn btn-default popup" title="Create Player" data-href="@Url.Action("Create", "Players")"
           data-toggle="modal" data-target="#popup-container">Create a new player &raquo;</a>
    </p>
</div>