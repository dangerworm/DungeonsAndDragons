@model DungeonsAndDragons_Data.Models.Object.PlayerCharacter[]

<div class="row">
    <div class="col-md-12">
        <table class="table table-hover table-striped">
            <thead>
            <tr>
                <th>Name</th>
                <th>Age</th>
                <th>Height</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var player in Model)
            {
                <a href="@Url.Action("Index", "Player", new { id = player.Id })">
                    <tr>
                        <td>@player.Name</td>
                        <td>@player.Age</td>
                        <td>@player.Height</td>
                    </tr>
                </a>
            }
            </tbody>
        </table>
    </div>

</div>
