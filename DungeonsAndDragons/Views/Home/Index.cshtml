@model DungeonsAndDragons.Models.OverviewModel

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>D&amp;D Manager</h1>
    <p class="lead">Manage all your games and players</p>
    <p><a href="http://http://dnd.wizards.com/" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Games</h2>
        @Html.Partial("_Games", Model.Games)
        <p>
            <a href="#" class="btn btn-default popup" title="Create Game" data-href="@Url.Action("Create", "Games")"
                    data-toggle="modal" data-target="#popup-container">Create a new game &raquo;</a>
        </p>
    </div>
    <div class="col-md-4">
        <h2>Players</h2>
        @Html.Partial("_PlayerCharacters", Model.Players)
        <p>
            <a href="#" class="btn btn-default popup" title="Create Player" data-href="@Url.Action("Create", "Players")"
                    data-toggle="modal" data-target="#popup-container">Learn more &raquo;</a>
        </p>
    </div>
    <div class="col-md-4">
        <h2>Something else</h2>
        <p>To be continued...</p>
        <p><a class="btn btn-default" href="#">Another link &raquo;</a></p>
    </div>
</div>
