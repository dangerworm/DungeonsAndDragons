@model IEnumerable<DungeonsAndDragons_Data.Race>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Speed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsPlayable)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Size.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VisionLevel.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Speed)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsPlayable)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Size.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VisionLevel.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.RaceId }) |
            @Html.ActionLink("Details", "Details", new { id=item.RaceId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.RaceId })
        </td>
    </tr>
}

</table>
