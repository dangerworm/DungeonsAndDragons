@model IEnumerable<DungeonsAndDragons_Data.PlayerCharacter>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CombatLevel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Class.Name)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.ParagonPath.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EpicDestiny.Name)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.ExperiencePoints)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Race.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Height)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WeightPounds)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Alignment.AlignmentId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Deity.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Picture)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CombatLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Class.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExperiencePoints)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Race.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Height)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WeightPounds)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alignment.AuthorityLevel.Name)
                @Html.DisplayFor(modelItem => item.Alignment.CompassionLevel.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Deity.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Picture)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PlayerCharacterId }) |
                @Html.ActionLink("Details", "Details", new { id = item.PlayerCharacterId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PlayerCharacterId })
            </td>
        </tr>
    }
</table>
